<h2 class="text-center mt-4"><%= @aarticle.title %></h2>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
          by Tiago Tabosa
        </div>
        <div class="card-body">
          <div class="card-text text-left"><%= simple_format(@aarticle.description) %></div>
          <%= link_to "Edit", edit_aarticle_path(@aarticle), class: "btn btn-outline-info" %>
          <%= link_to "Delete", aarticle_path(@aarticle), method: :delete, data: {confirm: "Are you sure?"}, class: "delete btn btn-outline-danger" %>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(@aarticle.created_at) %> ago, 
          edited <%= time_ago_in_words(@aarticle.updated_at) %> ago</small>         
        </div>
      </div>
    </div>
  </div>
</div>
